<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" 
    android:orientation="horizontal"
    android:background="@drawable/list_selector"
    android:padding="5sp" >
<LinearLayout
	android:id="@+id/info_info"
	android:layout_width="fill_parent"
	android:layout_height="wrap_content"
	android:orientation="vertical">
	
    <TextView
		android:id="@+id/info_title"
		android:textSize="18sp"
		android:textStyle="bold"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:padding="5dp"
		android:textColor="#000000" />

    <LinearLayout
      android:layout_width="fill_parent"
      android:layout_height="wrap_content"
      android:orientation="horizontal"
      android:padding="5dp" >
		<TextView 
		    android:id="@+id/info_date"
		    android:layout_weight="1"
			android:textSize="14sp"
			android:textStyle="italic"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="#000000"/>
			
		<TextView
			android:id="@+id/info_time"
			android:layout_weight="1"
			android:textSize="14sp"
			android:textStyle="italic"
			android:layout_width="fill_parent"
			android:layout_height="wrap_content"
			android:textColor="#000000" />
	</LinearLayout>
	
	<TextView
		android:id="@+id/info_description"
		android:textSize="14sp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:scrollbars="vertical"
		android:padding="5dp"
		android:maxLines="12"
		android:autoLink="all"
		android:textColor="#000000" />

	<TextView
		    android:id="@+id/info_place"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:textStyle="italic"
		    android:textSize="14sp"
		    android:padding="5dp"
		    android:textColor="#000000" />
		
	<TextView 
		android:id="@+id/info_poster"
		android:layout_weight="1"
		android:textSize="14sp"
		android:textStyle="italic"
		android:padding="5dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:textColor="#000000" />
			
	<TextView
		android:id="@+id/info_contact"
		android:layout_weight="1"
		android:textSize="14sp"
		android:textStyle="italic"
		android:padding="5dp"
		android:layout_width="fill_parent"
		android:layout_height="wrap_content"
		android:autoLink="email"/>
			
	
	<TextView
		android:id="@+id/info_url"
		android:layout_weight="1"
		android:textSize="14sp"
		android:textStyle="italic"
		android:maxLines="1"
		android:layout_width="fill_parent"
		android:padding="5dp"
		android:layout_height="wrap_content"
		android:clickable="true"
		android:autoLink="web"/>	
</LinearLayout>

<LinearLayout
    android:layout_below="@id/info_info"
    android:layout_height="wrap_content"
    android:layout_width="fill_parent"
    android:weightSum="1">
	    <Button
	    	android:id="@+id/info_add"
	    	android:layout_weight="0.5"
	    	android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:text="@string/add_long"
	        android:background="@drawable/button"
    		android:textSize="14sp"
    		android:textColor="#ffffff" />
		<Button
    		android:id="@+id/info_cancel"
    		android:layout_weight="0.5"
    		android:layout_width="fill_parent"
    		android:layout_height="wrap_content"
    		android:text="@string/cancel"
    		android:background="@drawable/button"
    		android:textSize="14sp"
    		android:textColor="#ffffff" />
		</LinearLayout>
</RelativeLayout>